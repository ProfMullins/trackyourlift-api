{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Track Your Lift API",
    "description": "Track Your Lift Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Workouts",
      "description": "API for workouts in the system"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Fetch user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to fetch",
            "schema": {
              "$ref": "#/definitions/ReturningUser"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User is found",
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        }
      }
    },
    "/workouts": {
      "post": {
        "tags": [
          "Workouts"
        ],
        "description": "Create new workout in system",
        "parameters": [
          {
            "name": "workout",
            "in": "body",
            "description": "Workout",
            "schema": {
              "$ref": "#/definitions/NewWorkout"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New workout is created",
            "schema": {
              "$ref": "#/definitions/NewWorkout"
            }
          }
        }
      }
    },
    "/workouts/lift": {
      "post": {
        "tags": [
          "Workouts"
        ],
        "description": "Create new lift for workout in system",
        "parameters": [
          {
            "name": "lift",
            "in": "body",
            "description": "lift",
            "schema": {
              "$ref": "#/definitions/NewLift"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New lift is created",
            "schema": {
              "$ref": "#/definitions/NewLift"
            }
          }
        }
      }
    },
    "/workouts/set": {
      "post": {
        "tags": [
          "Workouts"
        ],
        "description": "Create new set for lift in system",
        "parameters": [
          {
            "name": "set",
            "in": "body",
            "description": "Set",
            "schema": {
              "$ref": "#/definitions/NewSet"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New set is created",
            "schema": {
              "$ref": "#/definitions/NewSet"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "NewUser": {
      "required": [
        "email",
        "firstName",
        "birthYear",
        "birthMonth",
        "birthDay",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true,
          "example": "test@example.com"
        },
        "firstName": {
          "type": "string",
          "example": "John"
        },
        "birthYear": {
          "type": "integer",
          "example": 1981
        },
        "birthMonth": {
          "type": "integer",
          "example": 7
        },
        "birthDay": {
          "type": "integer",
          "example": 9
        },
        "password": {
          "type": "string"
        }
      }
    },
    "ReturningUser": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        }
      }
    },
    "User": {
      "required": [
        "email",
        "firstName",
        "_id"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "birthYear": {
          "type": "integer",
          "example": 1981
        },
        "birthMonth": {
          "type": "integer",
          "example": 7
        },
        "birthDay": {
          "type": "integer",
          "example": 9
        },
        "firstName": {
          "type": "string"
        }
      }
    },
    "NewWorkout": {
      "required": [
        "userId",
        "workoutName",
        "year",
        "month",
        "day"
      ],
      "properties": {
        "userId": {
          "type": "string",
          "example": "abcd1234"
        },
        "workoutName": {
          "type": "string",
          "example": "StrongLifts 5x5"
        },
        "year": {
          "type": "integer",
          "example": 2019
        },
        "month": {
          "type": "integer",
          "example": 5
        },
        "day": {
          "type": "integer",
          "example": 25
        }
      }
    },
    "NewLift": {
      "required": [
        "liftName",
        "numSets"
      ],
      "properties": {
        "liftName": {
          "type": "string",
          "example": "Benchpress"
        },
        "numSets": {
          "type": "integer",
          "example": 3
        }
      }
    },
    "NewSet": {
      "required": [
        "weight",
        "reps"
      ],
      "properties": {
        "weight": {
          "type": "number",
          "example": "225"
        },
        "reps": {
          "type": "integer",
          "example": 5
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
